<p style="color: green"><%= notice %></p>
<h1>Models</h1>

<div id="models">
  <table cellpadding="2" class="display compact dataTable" id="example">
    <thead>
      <tr>
        <th>Tool</th>
        <th>Model</th>
        <th>Version</th>
        <th>Group</th>
        <th>Host</th>
        <th>Port</th>
        <th>Up?</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @models.each do |model| -%>
        <tr>
          <td><%= @tools[ model.tool_id ] if ! @tools[ model.tool_id ].nil? %></td>
          <td><%= model.modelname %></td>
          <td><%= model.model_version %></td>
          <td><%= model.group_name %></td>
          <td><%= model.host_name %></td>
          <td><%= model.host_port %></td>
          <td><%= model.is_up %></td>
          <td><%= link_to "Show", model %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>
<br/>
<%= link_to "New model", new_model_path %>
